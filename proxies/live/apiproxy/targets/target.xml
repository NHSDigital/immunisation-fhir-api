<TargetEndpoint name="immunisation-fhir-api-target">

  <PreFlow>
    <Request>
      <Step>
        <Name>OauthV2.VerifyAccessTokenAppLevel3OrCis2Aal3</Name>
      </Step>
      <Step>
        <Name>FlowCallout.ApplyRateLimiting</Name>
      </Step>
      <Step>
        <Name>Javascript.HandleErrors</Name>
      </Step>
      <Step>
        <Name>AssignMessage.SetErrorResponse</Name>
        <Condition>oauthV2.OauthV2.VerifyAccessToken.failed</Condition>
      </Step>
    </Request>
  </PreFlow>

  <FaultRules>
    <!-- <FaultRule name="access_token_expired">
      <Step>
        <Name>ExtractVariables.OAuthErrorFaultString</Name>
      </Step>
      <Step>
        <Name>ExtractVariables.OAuthErrorFaultCode</Name>
      </Step>
      <Step>
        <Name>AssignMessage.SetErrorResponse</Name>
      </Step>
      <Condition>oauthV2.OauthV2.VerifyAccessToken.failed</Condition>
    </FaultRule> -->

    <FaultRule name="access_token_expired">
      <Step>
        <Name>ExtractVariables.OAuthErrorFaultString</Name>
      </Step>
      <Step>
        <Name>ExtractVariables.OAuthErrorFaultCode</Name>
      </Step>
      <Step>
        <Name>Javascript.HandleErrors</Name>
      </Step>
      <Step>
      <Name>AssignMessage.SetErrorResponse</Name>
      </Step>
      <Condition>oauthV2.OauthV2.VerifyAccessToken.failed</Condition>
    </FaultRule>
  </FaultRules>

  <HTTPTargetConnection>
    <URL>{{ DOMAIN_ENDPOINT }}</URL>
    <Properties>
      <Property name="supports.http10">true</Property>
      <Property name="request.retain.headers">User-Agent,Referer,Accept-Language</Property>
      <Property name="retain.queryparams">apikey</Property>
    </Properties>
  </HTTPTargetConnection>

</TargetEndpoint>
