{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action":  [
          "dynamodb:GetItem",
          "dynamodb:Query"
        ],
        "Resource": [
          "arn:aws:dynamodb:*:*:table/${dynamodb_table_name}",
          "arn:aws:dynamodb:*:*:table/${dynamodb_table_name}/index/*"
        ]
      }
    ]
  }